<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aaron.androiddesign_kotlin">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.FragmentActivity" />
        <activity android:name=".activity.SharedPreferencesActivity" />
        <activity android:name=".activity.TabLayoutActivity" />
        <activity
            android:name=".activity.ToolbarActivity"
            android:theme="@style/AppThemeStatusBar" />
        <activity
            android:name=".activity.NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.DrawerLayoutActivity" />
        <activity android:name=".activity.SlidingPaneLayoutActivity" />
        <activity android:name=".activity.SwipeRefreshLayoutActivity" />
        <activity android:name=".activity.TabLayoutActivity2" />
        <activity
            android:name=".activity.ToolbarActivity2"
            android:theme="@style/AppThemeStatusBar" />
        <activity android:name=".activity.AnkoExampleActivity" />
        <activity
            android:name=".activity.PagerActivity"
            android:theme="@style/AppThemeStatusBar" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.SettingActivity2" />
        <activity android:name=".activity.AnimationsActivity" />
        <activity
            android:name=".activity.ViewPagerSlidesActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>